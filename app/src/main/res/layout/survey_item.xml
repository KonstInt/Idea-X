<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorPrimary"
    android:layout_marginVertical="15dp"
    app:cardCornerRadius="20dp"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginHorizontal="10sp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_shape_custom">

        <TextView
            android:id="@+id/title_main_sur"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Кто круче Android или IOS"
            android:gravity="center"
            android:paddingHorizontal="@dimen/padding_10"
            />

        <TextView
            android:id="@+id/sur_text_body"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="53dp"
            android:layout_marginHorizontal="@dimen/padding_10"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20sp"
            android:maxLines="4"
            android:text="jjjjjj"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/padding_10"
            android:layout_marginBottom="15dp"
            >

            <Button
                android:id="@+id/vote_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="В реализации"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/padding_10"
                android:background="@drawable/shape_btn_sv"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/vote_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_10"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_sv"
                android:gravity="center"
                android:text="29999999"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>