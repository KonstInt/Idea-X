<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="250dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="@dimen/padding_10"
    app:cardBackgroundColor="@color/white_pressed"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginHorizontal="10sp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/padding_10">

    <TextView
        android:id="@+id/idea_main_way"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="?attr/spec_color"

        android:textStyle="bold"
        android:text="Охрана Т."
        android:gravity="center"
        android:paddingHorizontal="@dimen/padding_10"
        android:background="@drawable/idea_up_shape"/>

    <TextView
        android:id="@+id/idea_text_body"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="43dp"
        android:layout_marginHorizontal="@dimen/padding_10"
        android:paddingHorizontal="10dp"
        android:textColor="?attr/spec_color"
        android:maxLines="3"
        android:text=""
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_10"
            android:layout_weight="1"
            android:text="В реализации"
            android:textColor="@color/common_green" />

        <TextView
            android:id="@+id/idea_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:background="@drawable/ic_like"
            android:gravity="center"
            android:paddingRight="13dp"
            android:text="222"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>

</androidx.cardview.widget.CardView>