<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundr"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:orientation="vertical"
            app:cardCornerRadius="20dp"
            android:onClick="openProfile">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginTop="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/header_ava"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginHorizontal="10dp"
                        app:civ_border_color="?attr/spec_color"
                        app:civ_border_width="2dp"
                        android:src="@drawable/ava"/>

                    <TextView
                        android:id="@+id/header_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="33dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/header_ava"
                        android:text="Екатерина Симонова"
                        android:textColor="?attr/spec_color" />

                    <TextView
                        android:id="@+id/header_ideas_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/header_username"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="28dp"
                        android:layout_toEndOf="@+id/header_ava"
                        android:text="Внесено 66 предложений"
                        android:textColor="?attr/spec_color"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/header_0"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/coin"/>

                    <TextView
                        android:id="@+id/header_1"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@+id/header_0"
                        android:text="Баллы"
                        android:textAllCaps="true"
                        android:textColor="?attr/spec_color"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/header_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:layout_marginStart="25dp"
                        android:layout_toEndOf="@+id/header_1"
                        android:src="@drawable/vertical_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_toEndOf="@+id/header_2"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/header_3"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="8dp"
                            android:layout_toEndOf="@+id/header_2"
                            android:text="Рейтинг"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textAllCaps="true"
                            android:textColor="?attr/spec_color"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/header_4"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:layout_marginTop="8dp"

                            android:text="Активные"
                            android:textAllCaps="true"
                            android:textColor="?attr/spec_color"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/header_coins"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="38dp"
                        android:layout_toEndOf="@+id/header_0"
                        android:textStyle="bold"
                        android:text="300"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="?attr/spec_color"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_toEndOf="@+id/header_2"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/header_xp"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="38dp"
                            android:layout_toEndOf="@+id/header_2"
                            android:textStyle="bold"
                            android:text="12"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textColor="?attr/spec_color"
                            android:textSize="15sp" />


                        <TextView
                            android:id="@+id/header_active"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="38dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="4"
                            android:textAllCaps="true"
                            android:textColor="?attr/spec_color"
                            android:textSize="15sp" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="90dp">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/heaer_stories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>



            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/backgroundr"
                android:gravity="center"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/spec_color"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="Предложения болельщиков"
                        android:textAllCaps="true"/>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp" />


                </LinearLayout>
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:tabTextColor="?attr/spec_color"
                    app:tabMode="scrollable"
                    />

                
            </com.google.android.material.appbar.AppBarLayout>


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/padding_10">
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/spec_color"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Новости"
                    android:textAllCaps="true"/>

                <androidx.legacy.widget.Space
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_ec_blue_txt"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="Больше новостей"
                    android:onClick="openNews"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="-2dp"
                    android:textAllCaps="false"/>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginVertical="15dp"
                android:id="@+id/heaer_news"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="horizontal"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/padding_10">
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/spec_color"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Опросы"
                    android:textAllCaps="true"/>

                <androidx.legacy.widget.Space
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView

                android:layout_marginTop="@dimen/padding_10"
                android:id="@+id/sv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>




    </LinearLayout>

</ScrollView>
