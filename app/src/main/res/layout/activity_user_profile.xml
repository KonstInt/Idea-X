<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundr"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="20dp"
            android:background="?attr/lite_shape"

            android:layout_marginTop="-20dp">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="?attr/lite_shape">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/raw_back_profile"
                        android:layout_width="65dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_raw_back"
                        android:layout_marginTop="2dp"
                        android:onClick="BackToMenu"/>



                    <TextView
                        android:id="@+id/profile_header"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="65dp"
                        android:baselineAligned="false"
                        android:text="Личный кабинет"
                        android:textAlignment="center"

                        android:textColor="?attr/spec_color"
                        android:textSize="20sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/padding_10"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/set_profile_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:civ_border_width="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ava"/>
                    <ImageView

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_10"

                        android:src="@drawable/horizontal_bright_line" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/spec_color"
                            android:text="Рейтинг   "
                            android:textAlignment="center"

                            android:textSize="15sp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/spec_color"
                            android:text="12"
                            android:textAlignment="center"

                            android:textSize="25sp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/spec_color"
                            android:text="/100"
                            android:textAlignment="center"

                            android:textSize="15sp"

                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/spec_color"
                android:text="О себе"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="30dp"
                android:textSize="25sp"/>

            <androidx.legacy.widget.Space

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/ic_reduct"/>



        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="20dp"
            android:background="?attr/lite_shape"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="@dimen/padding_10"
            android:layout_marginBottom="@dimen/padding_10">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/lite_shape"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/spec_color"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Пользователь : "
                        />


                    <EditText
                        android:id="@+id/user_name_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/set_profile_image"
                        android:text="Екатерина Симонова"
                        android:textColor="?attr/spec_color"
                        android:backgroundTint="?attr/bright_color"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:focusable="false"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/spec_color"
                        android:layout_marginStart="7dp"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:text="Департамент: "
                        />


                    <EditText

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_toEndOf="@+id/set_profile_image"
                        android:text="Отдел качества"
                        android:textColor="?attr/spec_color"
                        android:backgroundTint="?attr/text_color"
                        android:textSize="15sp"

                        android:focusable="false"/>


                </LinearLayout>   <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/spec_color"
                    android:layout_marginStart="7dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:text="Должность : "
                    />


                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_toEndOf="@+id/set_profile_image"
                    android:text="Оператор"
                    android:textColor="?attr/spec_color"
                    android:backgroundTint="?attr/text_color"
                    android:textSize="15sp"

                    android:focusable="false"/>


            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:text="E-mail : "
                        android:textColor="?attr/spec_color"
                        android:textSize="17sp"
                        android:textStyle="bold" />


                    <EditText

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"

                        android:layout_toEndOf="@+id/set_profile_image"
                        android:backgroundTint="?attr/text_color"
                        android:focusable="false"
                        android:text="test@rosseti.com"
                        android:textColor="?attr/spec_color"

                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:text="Телефон : "
                        android:textColor="?attr/spec_color"
                        android:textSize="17sp"
                        android:textStyle="bold" />


                    <EditText

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"

                        android:layout_toEndOf="@+id/set_profile_image"
                        android:backgroundTint="?attr/text_color"
                        android:focusable="false"
                        android:text="+7(800)-555-35-35"
                        android:textColor="?attr/spec_color"

                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:text="Компетенции : "
                        android:textColor="?attr/spec_color"
                        android:textSize="17sp"
                        android:textStyle="bold" />


                    <EditText

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"

                        android:layout_toEndOf="@+id/set_profile_image"
                        android:backgroundTint="?attr/text_color"
                        android:focusable="false"
                        android:text="CSS, HTML, Java, Настройка сетей, Доступ к сетям"
                        android:textColor="?attr/spec_color"

                        android:textSize="15sp" />


                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/spec_color"
                android:text="Настройки"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="30dp"
                android:textSize="25sp"/>

            <androidx.legacy.widget.Space

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />




        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:orientation="vertical"
            app:cardCornerRadius="20dp"
            android:background="?attr/lite_shape"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="@dimen/padding_10">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/lite_shape"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="Тёмная тема"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="?attr/spec_color"
                        android:textSize="20dp" />

                    <Switch
                        android:id="@+id/day_night"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="10dp"

                        />




                </LinearLayout>




            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/backgroundr"
            android:fillViewport="true"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="?attr/backgroundr">



                </LinearLayout>


                <EditText
                    android:id="@+id/input_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:maxLength="33"
                    android:textColor="@drawable/btn_shape_text"
                    android:paddingStart="15dp"
                    android:hint="Имя"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColorHint="?attr/spec_color"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="?attr/spec_color"
                    android:inputType="textEmailAddress"
                    android:visibility="gone"/>




                <androidx.legacy.widget.Space

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/update_settings_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="15dp"
                    android:padding="10dp"
                    android:background="@drawable/btn_shape"
                    android:text="Сохранить"
                    android:textColor="?attr/text_color"
                    android:layout_marginTop="70dp"/>



                <TextView
                    android:id="@+id/sign_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выйти из аккаунта"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/common_red"
                    android:onClick="SignOut"/>



            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</ScrollView>