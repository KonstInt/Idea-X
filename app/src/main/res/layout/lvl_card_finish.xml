<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/start_test_btn_shape"
    >



    <TextView
        android:id="@+id/task_end_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/spec_color"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text=""
        android:textStyle="bold"
        android:textSize="20dp"
       />


    <TextView
        android:id="@+id/task_end_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_red_txt"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text=""
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:textSize="15dp"
        />

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/end_test_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/start_test_btn_shape"
        android:text="Закончить"
        android:padding="10dp"
        android:textColor="?attr/spec_color"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>